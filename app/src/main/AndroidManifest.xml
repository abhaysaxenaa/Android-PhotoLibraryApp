<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidphotos42">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPhotos42">
        <activity android:name=".SearchPhoto"></activity>
        <activity
            android:name=".singlePhotoDisplay"
            android:label="@string/title_activity_single_photo_display"
            android:theme="@style/Theme.AndroidPhotos42.NoActionBar" />
        <activity
            android:name=".AlbumActivity"
            android:label="@string/title_activity_album"
            android:theme="@style/Theme.AndroidPhotos42.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidPhotos42.NoActionBar">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>